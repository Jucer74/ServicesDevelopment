@model IEnumerable<MoneyBankWeb_josoterad.Models.AccountDto>

<h2>Cuentas</h2>
<p>
    <a asp-action="Create">Crear Nueva Cuenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Número</th>
            <th>Propietario</th>
            <th>Balance</th>
            <th>Sobregiro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>@item.AccountType</td>
        <td>@item.AccountNumber</td>
        <td>@item.OwnerName</td>
        <td>@item.BalanceAmount</td>
        <td>@item.OverdraftAmount</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> |
            <a asp-action="Deposit" asp-route-id="@item.Id">Depósito</a> |
            <a asp-action="Withdrawal" asp-route-id="@item.Id">Retiro</a>
        </td>
    </tr>
}
    </tbody>
</table>
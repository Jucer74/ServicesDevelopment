@model MoneyBankWeb_josoterad.Models.AccountDto

<h1>Detalles de Cuenta</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.AccountType</dd>

        <dt class="col-sm-2">Número</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>

        <dt class="col-sm-2">Propietario</dt>
        <dd class="col-sm-10">@Model.OwnerName</dd>

        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.BalanceAmount</dd>

        <dt class="col-sm-2">Sobregiro</dt>
        <dd class="col-sm-10">@Model.OverdraftAmount</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyBankWeb</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">MoneyBank</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Accounts">Cuentas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Accounts/Create">Crear</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Accounts/Deposit">Depositar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Accounts/Withdraw">Retirar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-4 border-top">
        <div class="container">
            <span class="text-muted">© 2025 - MoneyBankWeb</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
